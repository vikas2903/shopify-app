<!-- Splide CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
{%- style -%}
  .section-{{ block.id }}-padding {
    padding-top: {{ block.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
  }

div#progress {
    display: block;
}

  @media screen and (min-width: 750px) {
    .section-{{ block.id }}-padding {
      padding-top: {{ block.settings.padding_top }}px;
      padding-bottom: {{ block.settings.padding_bottom }}px;
    }
  }
  p.ml-product-price {
    margin: 0;
    text-align: center;
}
{%- endstyle -%}

<div class="multi-variant-wrapper section-{{ block.id }}-padding">
  <div class="page-width">
    <div class="section-header">
      <h2 class="section-header__title">{{ block.settings.heading }}</h2>
    </div>
    <div class="ml-section-list">
      <div class="ml-vari-col ml-vari-img">
        <a href="{{ block.settings.banner_link }}">
          <img src="{{ block.settings.banner_image | image_url: width: 800 }}">
        </a>
      </div>
      <div class="ml-vari-col ml-vari-variants">
        <div id="multi-variant-splide" class="splide">
          <div class="splide__track">
            <ul class="splide__list">
              {% assign selected_collection = collections[block.settings.collection] %}
              {% if selected_collection.products_count > 0 %}
                {% for product in selected_collection.products limit: 10 %}
                  <li class="splide__slide">
                    <a href="{{ product.url }}" class="variant-card">
                      <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
                      <p class="ml-product-title">{{ product.title | truncate:"90" }}</p>
                         <p class="ml-product-price">{{ product.price | money_with_currency }}</p>
                    </a>
                  </li>
                {% endfor %}
              {% else %}
                <p>No products in selected collection.</p>
              {% endif %}
            </ul>
          </div>
          <div class="splide__arrows">
            <button class="splide__arrow splide__arrow--prev">‹</button>
            <button class="splide__arrow splide__arrow--next">›</button>
          </div>
          {% if selected_collection.products_count > 0 %}
            <div class="bottom-btns">
              <a class="ff-btn" href="{{ selected_collection.products.first.url }}">View All</a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .multi-variant-wrapper{
    background: {{block.settings.bg}};
    position: relative;
    
  }


.multi-variant-wrapper .page-width {
    position: relative;
  max-width: 1400px;
}
  .ff-btn {
    background: #282553;
    color: #fff;
    padding: 10px 20px;
    display: block;
    margin-top: 20px;
    border-radius: 5px;
    width: fit-content;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 12px;
  }
  a.ff-btn.tone {
    background: #cfa88a;
  }
  .bottom-btns {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  .ff-btn:hover {
    color: #fff;
  }
  .ml-vari-col {
    width: 50%;
  }
  .variant-card img {
    max-width: 100%;
    border-radius: 8px;
    aspect-ratio: 1/1.2;
  }
  .variant-card p {
    margin: 10px 0 20px;
    color: #000;
    font-size: 12px;
    line-height: 1.3;
  }
  .ml-section-list {
    display: flex;
    gap: 20px;
    align-items: center;
  }
  .ml-vari-col.ml-vari-img {
    border-radius: 10px;
    overflow: hidden;
    width: 55%;
  }
  .ml-vari-col.ml-vari-img img{
    width: 100%;
    height: 100%;
    display: block;
  }
  .ml-vari-col.ml-vari-variants {
    width: 45%;
  }
  .splide__slide {
    text-align: center;
    background: #fff;
    padding: 5px;
    border-radius: 10px;
  }
  a.variant-card {
    text-decoration: none;
  }
  @media(max-width: 768px){
    .ml-section-list {
      flex-direction: column;
    }
    .ml-vari-col,
    .ml-vari-col.ml-vari-img,
    .ml-vari-col.ml-vari-variants {
      width: 100%;
    }
    .ff-btn {
      margin-left: auto !important;
      margin-right: auto !important;
    }
    .splide__slide {
      padding: 6px;
    }
  }
</style>
 


<script>
  document.addEventListener('DOMContentLoaded', function () {
  new Splide('#multi-variant-splide', {
    type: 'loop',
    perPage: 3,
    gap: '1rem',
    autoplay: true,
    interval: 3000,
    pagination: false,
    breakpoints: {
      768: {
        perPage: 2,
        gap: '0.5rem'
      },
      480: {
        perPage: 2,
        gap: '0.3rem'
      },
      320: {
        perPage: 2,
        gap: '0.2rem'
      }
    }
  }).mount();
});

</script>



{% schema %}
{
  "name": "Multi variant section",
  "target":"section",
  "settings": [
    {
      "type": "color",
      "id":"bg",
      "label":"Background Color",
      "default":"#fff3cd"

    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Banner Link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}
