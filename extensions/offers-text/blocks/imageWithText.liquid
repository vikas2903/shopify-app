{% comment %} Shopify App Extension Compatible Featured Product Carousel with Splide Slider {% endcomment %}

<!-- Splide CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">

<style>
  .sp-tag {
    background: linear-gradient(45deg, #a66d30, #ffe58e 50%, #e0b057);
    border-radius: 2px;
    line-height: 1;
    font-size: 10px;
    color: #000;
    padding: 8px 19px 8px 7px;
    text-transform: uppercase;
    margin-left: 0;
    margin-bottom: 9px;
    clip-path: polygon(100% 0%, 91% 50%, 100% 100%, 0 100%, 0% 50%, 0 0);
    margin-top: 3px;
  }

  .featured-product-carousel {
    background: {{ block.settings.bg }};
    padding-top: {{ block.settings.margin_top }}px;
    padding-bottom: {{ block.settings.margin_bottom }}px;
    border-radius: 0px;
    border-bottom: 1px solid #f9e4bc36;
  }

  .featured-product-carousel__header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .featured-product-carousel__title {
    font-size: {{ block.settings.heading_font_size }}px;
    color: {{ block.settings.heading_font_color }};
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .featured-product-carousel__subtitle {
    font-size: 1.1rem;
    color: #666;
  }

  .featured-img-titlte img {
    width: 100%;
    display: block;
  }

  .splide__slide .product-card {
    background: #fff;
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    height: 100%;
    padding-bottom: 20px;
    {% if block.settings.enable_card_border %}
      border: 1px solid {{ block.settings.card_border_color }};
    {% endif %}
  }

  .product-card__image {
    width: 100%;
    aspect-ratio: 3/4;
    object-fit: cover;
    border-radius: 12px;
  }

  .product-card__title,
  .product-card__price {
    padding: 0 10px;
    text-align: left;
  }

  .product-card__title {
    font-size: 14px;
    font-weight: 500;
    margin: 5px 0 5px;
    color: #000;
    line-height: 1.3;
    text-transform: capitalize !important;
  }

  .product-card__price {
    color: #000;
    font-size: 14px;
    font-weight: 500;
  }

  .product-card__price .compare {
    text-decoration: line-through;
    color: #888;
  }

  .product-card__price .sale {
    font-weight: bold;
  }

  .ff-btn {
    background: {{ block.settings.btn_bg }};
    color: {{ block.settings.btn_text }};
    padding: 10px 20px;
    border-radius: 5px;
    text-transform: uppercase;
    font-size: 12px;
    margin: 20px auto 0;
    display: block;
    width: fit-content;
    text-decoration: none;
  }

  .page-widthh {
    padding: 0 20px;
  }

  @media (max-width: 767px) {
    .product-card__title {
      text-transform: capitalize !important;
      font-size: 12px !important;
      margin: 10px 0 5px;
      color: #000;
      padding: 0 !important;
    }

    .page-widthh {
      padding: 0 10px;
    }
  }
</style>

<div class="featured-product-carousel">
  <div class="featured-product-carousel__header">
    {% if block.settings.section_title != blank %}
      <div class="featured-product-carousel__title">{{ block.settings.section_title }}</div>
    {% endif %}
    {% if block.settings.section_subtitle != blank %}
      <div class="featured-product-carousel__subtitle">{{ block.settings.section_subtitle }}</div>
    {% endif %}

    <div class="featured-img-titlte">
      {% if block.settings.featured_image_banner != blank %}
        <picture>
          <source media="(max-width: 767px)" srcset="{{ block.settings.featured_image_banner | img_url: 'master' }}" />
          <img src="{{ block.settings.featured_image_banner | img_url: 'master' }}" alt="{{ block.settings.featured_image_banner.alt }}" />
        </picture>
      {% else %}
        <picture>
          <source media="(max-width: 767px)" srcset="https://cdn.shopify.com/s/files/1/0830/2719/8240/files/Style_Jaipur_4.png?v=1752664860" />
          <img src="https://cdn.shopify.com/s/files/1/0830/2719/8240/files/Style_Jaipur_4.png?v=1752664860" alt="Featured Image" />
        </picture>
      {% endif %}
    </div>
  </div>

  <div class="page-widthh">
    <div id="splide-featured" class="splide splide-featured">
      <div class="splide__track">
        <ul class="splide__list">
          {% assign featured_collection = collections[block.settings.featured_collection] %}
          {% if featured_collection and featured_collection.products.size > 0 %}
            {% for product in featured_collection.products %}
              <li class="splide__slide">
                <div class="product-card">
                  <a href="{{ product.url }}">
                    <img class="product-card__image" src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
                  </a>
                  {% if block.settings.product_label != blank %}
                    <span class="sp-tag">{{ block.settings.product_label }}</span>
                  {% endif %}
                  <div class="product-card__title">{{ product.title | truncate: 100 }}</div>
                  <div class="product-card__price">
                    {% if product.compare_at_price > product.price %}
                      <span class="compare">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                    <span class="sale">{{ product.price | money }}</span>
                  </div>
                </div>
              </li>
            {% endfor %}
          {% else %}
            <li>No products found in this collection.</li>
          {% endif %}
        </ul>
        <a class="ff-btn" href="{{ featured_collection.url }}">View All</a>
      </div>
    </div>
  </div>
</div>

<!-- Splide JS -->
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('#splide-featured', {
      type: 'loop',
      perPage: 4,
      gap: '1rem',
      pagination: false,
      breakpoints: {
        1024: { perPage: 3 },
        768: { perPage: 2 },
        480: { perPage: 2 }
      }
    }).mount();
  });
</script>

{% schema %}
{
  "name": "Featured Product Carousel",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg",
      "label": "Background Color",
      "default": "#f9e4bc36"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Check out our top picks."
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "min": 14,
      "max": 40,
      "step": 1,
      "default": 24
    },
    {
      "type": "color",
      "id": "heading_font_color",
      "label": "Heading Font Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_bg",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_text",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "enable_card_border",
      "label": "Enable Card Border",
      "default": false
    },
    {
      "type": "color",
      "id": "card_border_color",
      "label": "Card Border Color",
      "default": "#cccccc"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Select Collection"
    },
    {
      "type": "image_picker",
      "id": "featured_image_banner",
      "label": "Featured Image Banner"
    },
    {
      "type": "text",
      "id": "product_label",
      "label": "Product Label Badge",
      "default": "Rakhi Special"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom Margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    }
  ]
}
{% endschema %}
