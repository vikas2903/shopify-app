{%- if template.name == 'product' -%} <style> select#sticky-variant-select { min-width: 80px; background: #fff; outline: none; border: none; padding: 4px 8px; } .sticky-cart-bar { position: fixed; bottom: 0; left: 0; right: 0; background: {{block.settings.sticky_bg}}; color: white; z-index: 9999; display: flex; align-items: center; justify-content: space-between; padding: 10px 20px; border-top: 2px solid {{block.settings.sticky_bt}}; font-family: sans-serif; } .sticky-cart-left { display: flex; align-items: center; } .sticky-cart-image { width: 50px; height: auto; margin-right: 12px; border-radius: 4px; } .sticky-cart-title { font-weight: bold; font-size: 14px; } .sticky-cart-price { color: {{block.settings.sticky_btn}}; font-weight: bold; font-size: 14px; } .sticky-cart-compare { text-decoration: line-through; color: #999; font-size: 13px; } .sticky-cart-button { background-color: {{block.settings.sticky_btn}}; color: {{block.settings.sticky_btn_label}}; padding: 10px 20px; font-weight: bold; border: none; border-radius: 4px; cursor: pointer; } </style> <div class="sticky-cart-bar"> <div class="sticky-cart-left"> <img class="sticky-cart-image" src="{{ product.featured_image | img_url: '100x100' }}" alt="{{ product.title }}" /> <div> <div class="sticky-cart-title">{{ product.title }}</div> <div class="sticky-cart-price"> {{ product.price | money }} {% if product.compare_at_price > product.price %} <span class="sticky-cart-compare">{{ product.compare_at_price | money }}</span> {% endif %} </div> </div> </div> <div> {% if product.variants.size > 1 %} <select id="sticky-variant-select"> {% for variant in product.variants %} <option value="{{ variant.id }}">{{ variant.title }}</option> {% endfor %} </select> {% endif %} <button id="sticky-add-to-cart" class="sticky-cart-button">Add to cart</button> </div> </div> <script> document.addEventListener("DOMContentLoaded", function () { const addToCartBtn = document.getElementById("sticky-add-to-cart"); const variantSelect = document.getElementById("sticky-variant-select"); const defaultVariantId = {{ product.variants.first.id }}; addToCartBtn.addEventListener("click", function () { const variantId = variantSelect ? variantSelect.value : defaultVariantId; fetch("/cart/add.js", { method: "POST", headers: { "Content-Type": "application/json", "Accept": "application/json" }, body: JSON.stringify({ items: [ { id: parseInt(variantId), quantity: 1 } ] }) }) .then(response => response.json()) .then(data => { console.log("Added to cart:", data); window.location.href = "/cart"; // or show success toast }) .catch(error => { console.error("Add to cart failed:", error); }); }); }); </script> {%- endif -%} {% schema %} { "name":"Sticky Cart", "target":"section", "settings": [ { "type":"color", "id":"sticky_bg", "label":"Background Color", "default":"#000" }, { "type":"color", "id":"sticky_bt", "label":"Border Top Color", "default":"#1eff00" }, { "type":"color", "id":"sticky_btn", "label":"Button Background Color", "default":"#d4ff00" }, { "type":"color", "id":"sticky_btn_label", "label":"Button Label Color", "default":"#000" } ] } {% endschema %}