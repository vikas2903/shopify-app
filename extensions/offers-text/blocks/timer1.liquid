<style> 
:root{
    --color : {{block.settings.body_text}}
}

.announcement-section-1 { width: 100%; max-width: 100%; box-sizing: border-box; font-family: inherit; overflow-x: hidden; margin: 0; background: linear-gradient(45deg, var(--color), var(--color), var(--color)); background-size: 400% 400%; animation: primaryGradient 5s ease infinite; color: #000000; text-align: center; padding: 10px 0; } 
.announcement-section-1 .container { width: 100%; max-width: 100%; box-sizing: border-box; margin: 0; padding: 0; } 
.announcement-wrapper { font-size: 16px; font-weight: 700; line-height: 19.7px; letter-spacing: -0.01em; display: flex; justify-content: center; align-items: center; gap: 1rem; } 
.holiday-clock { display: flex; justify-content: center; align-items: center; } 
.box-3 { display: flex; flex-direction: column; justify-content: center; align-items: center; background-color: #121212; border-radius: 2px; width: 32px; height: 32px; margin: 0 2px; padding: 3px; } 
.text-block-countdown { color: #000000; padding: 0 0.15rem; font-weight: 800; font-size: 18px; } 
.clock-number-2 { font-size: 16px; font-weight: 900; line-height: 1; color:var(--color); } 
.clock-label-2 { font-size: 10px; line-height: 1; text-transform: uppercase; color: var(--color); } 
@media(max-width:767px){
  .box-3{height: 40px;}
}

</style>



<div class="announcement-section-1">
      <div class="container">
        <div class="announcement-wrapper">
          <span class="clock-down_text">{{block.settings.timer-title}}</span>
          <div class="holiday-clock" id="js-clock">
            <div class="box-3">
              <div class="clock-number-2" id="js-clock-days">0</div>
              <div class="clock-label-2">DAYS</div>
            </div>

            <div class="text-block-countdown">:</div>

            <div class="box-3">
              <div class="clock-number-2" id="js-clock-hours">0</div>
              <div class="clock-label-2">HRS</div>
            </div>

            <div class="text-block-countdown">:</div>

            <div class="box-3">
              <div class="clock-number-2" id="js-clock-minutes">0</div>
              <div class="clock-label-2">MIN</div>
            </div>

            <div class="text-block-countdown">:</div>  
  
            <div class="box-3">
              <div class="clock-number-2" id="js-clock-seconds">0</div>
              <div class="clock-label-2">SEC</div>
            </div>
          </div>
        </div>
      </div>
    </div>



      <script>
      document.addEventListener("DOMContentLoaded", function () {
        const td = "{{block.settings.date_picker}}"
        const targetDate = new Date(td);  

        const daysEl = document.getElementById("js-clock-days");
        const hoursEl = document.getElementById("js-clock-hours");
        const minutesEl = document.getElementById("js-clock-minutes");
        const secondsEl = document.getElementById("js-clock-seconds");

  

        const timer = setInterval(function () {
          const currentDate = new Date();
          const diff = targetDate - currentDate;

          if (diff <= 0) {
            clearInterval(timer);
            console.log("Countdown Finished");
            return;
          }

          const totalSeconds = Math.floor(diff / 1000);
          const days = Math.floor(totalSeconds / (60 * 60 * 24));
          const hours = Math.floor((totalSeconds % (60 * 60 * 24)) / (60 * 60));
          const minutes = Math.floor((totalSeconds % (60 * 60)) / 60);
          const seconds = totalSeconds % 60;

          daysEl.innerHTML = days;
          hoursEl.innerHTML = hours;
          minutesEl.innerHTML = minutes;
          secondsEl.innerHTML = seconds;
        }, 1000);
      });
    </script>

    {% schema %}
    {
        "name":"Timer-1",
        "target":"section",
        "settings": [
            {
                "type":"text",
                "id":"timer-title",
                "label":"Timer Title",
                "default":"Flash Sale Ends In",
                "info":"Flash Sale Ends In"

            },
            {
                "type": "text",
                "id": "date_picker",
                "label": "Choose date",
                "default": "2025-12-31",
                "info": "e.g. yyyy-mm-dd"
            },
            {
                "type": "color",
                "id": "body_text",
                "label": "Timer Background and Title Color",
                "default": "#cde02d"
            }
        

        ]
 
    }

    {% endschema %}