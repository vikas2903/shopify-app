<style> 
:root {
  --primary-color: {{ block.settings.body_text }};
  --text-color: {{ block.settings.text_color }};
  --box-bg-color: {{ block.settings.box_bg_color }};
}

.announcement-section-1 {
  width: 100%;
  box-sizing: border-box;
  background: {{ block.settings.body_text }};
  color: var(--text-color);
  text-align: center;
  padding: 10px 0;
}

.announcement-wrapper {
  font-size: 16px;
  font-weight: 400;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
}

.holiday-clock {
  display: flex;
  justify-content: center;
  align-items: center;
}

.box-3 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--box-bg-color);
  border-radius: 2px;
  width: 32px;
  height: 32px;
  margin: 0 2px;
  padding:5px 3px 3px 3px;
}

.text-block-countdown {
  color: var(--text-color);
  padding: 0 0.15rem;
  font-weight: 800;
  font-size: 18px;
}

.clock-number-2 {
  font-size: 16px;
  font-weight: 900;
  color: {{ block.settings.body_text }};
  line-height: .9 ;
}

.clock-label-2 {
  font-size: 10px;
  text-transform: uppercase;
  color: {{ block.settings.body_text }};
       line-height: 1.1;
    padding-bottom: 3px;
}
.clock-down_text{font-size:{{block.settings.desktop_font_size}}px;}
@media(max-width:767px) {
  .box-3 { height: 40px; }
  .clock-down_text{font-size:{{block.settings.mobile_font_size}}px;}
}
</style>

<div class="announcement-section-1">
  <div class="announcement-wrapper">
    <span class="clock-down_text">{{ block.settings.timer_title }}</span>
    <div class="holiday-clock" id="js-clock">
      {% if block.settings.daily_reset == false %}
        <div class="box-3">
          <div class="clock-number-2" id="js-clock-days">0</div>
          <div class="clock-label-2">DAY</div>
        </div>
        <div class="text-block-countdown">:</div>
      {% endif %}
      <div class="box-3">
        <div class="clock-number-2" id="js-clock-hours">00</div>
        <div class="clock-label-2">HRS</div>
      </div>
      <div class="text-block-countdown">:</div>
      <div class="box-3">
        <div class="clock-number-2" id="js-clock-minutes">00</div>
        <div class="clock-label-2">MIN</div>
      </div>
      <div class="text-block-countdown">:</div>  
      <div class="box-3">
        <div class="clock-number-2" id="js-clock-seconds">00</div>
        <div class="clock-label-2">SEC</div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const isDaily = {{ block.settings.daily_reset | json }};
  const daysEl = document.getElementById("js-clock-days");
  const hoursEl = document.getElementById("js-clock-hours");
  const minutesEl = document.getElementById("js-clock-minutes");
  const secondsEl = document.getElementById("js-clock-seconds");

  function getTargetDate() {
    if (isDaily) {
      let now = new Date();
      let tomorrow = new Date(now);
      tomorrow.setHours(23, 59, 59, 999); // End of today
      return tomorrow;
    } else {
      const fixedDate = new Date("{{ block.settings.date_picker }}T23:59:59");
      return fixedDate;
    }
  }

  function updateCountdown() {
    const targetDate = getTargetDate();
    const now = new Date();
    let diff = targetDate - now;

    if (diff < 0) {
      diff = 0;
    }

    const totalSeconds = Math.floor(diff / 1000);
    const days = Math.floor(totalSeconds / (60 * 60 * 24));
    const hours = Math.floor((totalSeconds % (60 * 60 * 24)) / 3600);
    const minutes = Math.floor((totalSeconds % 3600) / 60);
    const seconds = totalSeconds % 60;

    if (!isDaily && daysEl) {
      daysEl.textContent = days.toString().padStart(2, '0');
    }

    hoursEl.textContent = hours.toString().padStart(2, '0');
    minutesEl.textContent = minutes.toString().padStart(2, '0');
    secondsEl.textContent = seconds.toString().padStart(2, '0');
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
});
</script>

{% schema %}
{
  "name": "Smart Offer Timer",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "timer_title",
      "label": "Timer Title",
      "default": "Hurry Up! Ends In"
    },
    {
      "type": "range",
      "id": "desktop_font_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Desktop Font size",
      "default": 18
    },
     {
      "type": "range",
      "id": "mobile_font_size",
      "min": 8,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Mobile Font size",
      "default": 14
    },
    {
      "type": "text",
      "id": "date_picker",
      "label": "End Date (yyyy-mm-dd)",
      "default": "2025-12-31"
    },
    {
      "type": "checkbox",
      "id": "daily_reset",
      "label": "Enable Daily Reset (24hr)",
      "default": false
    },
    {
      "type": "color",
      "id": "body_text",
      "label": "Highlight Color",
      "default": "#cde02d"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "box_bg_color",
      "label": "Box Background Color",
      "default": "#121212"
    }
  ]
}
{% endschema %}
