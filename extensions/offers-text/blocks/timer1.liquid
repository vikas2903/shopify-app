<style> 
:root {
  --primary-color: {{ block.settings.body_text }};
  --text-color: {{ block.settings.text_color }};
  --box-bg-color: {{ block.settings.box_bg_color }};
}

.announcement-section-1 {
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  font-family: inherit;
  overflow-x: hidden;
  margin: 0;
  background:{{ block.settings.body_text }};
  background-size: 400% 400%;
  animation: primaryGradient 5s ease infinite;
  color: var(--text-color);
  text-align: center;
  padding: 10px 0;
}

.announcement-wrapper {
  font-size: 16px;
  font-weight: 700;
  line-height: 19.7px;
  letter-spacing: -0.01em;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
}

.holiday-clock {
  display: flex;
  justify-content: center;
  align-items: center;
}

.box-3 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--box-bg-color);
  border-radius: 2px;
  width: 32px;
  height: 32px;
  margin: 0 2px;
  padding: 3px;
}

.text-block-countdown {
  color: var(--text-color);
  padding: 0 0.15rem;
  font-weight: 800;
  font-size: 18px;
}

.clock-number-2 {
  font-size: 16px;
  font-weight: 900;
  line-height: 1;
  color:{{ block.settings.body_text }};
}

.clock-label-2 {
  font-size: 10px;
  line-height: 1;
  text-transform: uppercase;
  color:{{ block.settings.body_text }};
}

@media(max-width:767px) {
  .box-3 { height: 40px; }
}
</style>

<div class="announcement-section-1">
  <div class="container">
    <div class="announcement-wrapper">
      <span class="clock-down_text">{{ block.settings.timer-title }}</span>
      <div class="holiday-clock" id="js-clock">
        <div class="box-3">
          <div class="clock-number-2" id="js-clock-hours">0</div>
          <div class="clock-label-2">HRS</div>
        </div>
        <div class="text-block-countdown">:</div>
        <div class="box-3">
          <div class="clock-number-2" id="js-clock-minutes">0</div>
          <div class="clock-label-2">MIN</div>
        </div>
        <div class="text-block-countdown">:</div>  
        <div class="box-3">
          <div class="clock-number-2" id="js-clock-seconds">0</div>
          <div class="clock-label-2">SEC</div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const td = "{{ block.settings.date_picker }}T23:59:59";
  const targetDate = new Date(td);

  const hoursEl = document.getElementById("js-clock-hours");
  const minutesEl = document.getElementById("js-clock-minutes");
  const secondsEl = document.getElementById("js-clock-seconds");

  function updateCountdown() {
    const currentDate = new Date();
    let diff = targetDate - currentDate;

    if (diff <= 0) {
      diff = 0;
    }

    const totalSeconds = Math.floor(diff / 1000);
    const hours = Math.floor((totalSeconds % (60 * 60 * 24)) / (60 * 60));
    const minutes = Math.floor((totalSeconds % (60 * 60)) / 60);
    const seconds = totalSeconds % 60;

    hoursEl.textContent = hours.toString().padStart(2, '0');
    minutesEl.textContent = minutes.toString().padStart(2, '0');
    secondsEl.textContent = seconds.toString().padStart(2, '0');
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
});
</script>

{% schema %}
{
  "name": "Offer Timer",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "timer-title",
      "label": "Timer Title",
      "default": "Flash Sale Ends In"
    },
    {
      "type": "text",
      "id": "date_picker",
      "label": "Choose Date",
      "default": "2025-12-31",
      "info": "Format: yyyy-mm-dd"
    },
    {
      "type": "color",
      "id": "body_text",
      "label": "Gradient & Label Color",
      "default": "#cde02d"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Main Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "box_bg_color",
      "label": "Box Background Color",
      "default": "#121212"
    }
  ]
}
{% endschema %}
