<style>
  :root {
    --image-height: {{ block.settings.image_height }}px;
    --border-radius: {{ block.settings.border_radius }}%;
    --font-size: {{ block.settings.font_size }}rem;
    --section-margin-y: {{block.settings.section-margin-y}}px;
  }

.logo-container::-webkit-scrollbar {
    display: none;
}

.logo-container {
    padding: 2rem 0;
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    gap: 1rem;
    overflow-x: scroll;
}
@media(max-width:767px){
  .logo-container {    justify-content: flex-start;}
}

 .logo-item {
    padding: 10px 0 20px 0;
    box-sizing: border-box;
    text-align: center;
    flex: 0 0 calc(100% / 10);
}

  .logo-item a {
    display: block;
    height: var(--image-height);
    width: var(--image-height);
    text-decoration: none;
  }

  .logo-item img {
    width: 100%;
    height: 100%;
    border-radius: var(--border-radius);
    border: 1px solid #eee;
    object-fit: cover;
    display: block; 
  }

  .logo-item span {
    font-size: var(--font-size);
    margin-top: 4px;
    color: #000;
    display: block;
  }


  @media (max-width: 767px) {
    .logo-item span {
      font-size: calc(var(--font-size, 1.4rem) - 0.4rem);
    }
    .logo-container {
    padding: 1rem 0;
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-start;
    gap: 1rem;
    flex-direction: row;
    overflow-x: scroll;
}
.logo-item {
    flex: 0 0 calc(100% / 30px);
}
  }
</style>

