
<style>
:root{
  --usp-width:{{block.settings.usp-width}}px;
  --usp-radius: {{block.settings.usp-radius}}%;
  --usp-circle-bg: {{block.settings.usp-circle-bg}};
  --usp-circle-border: {{block.settings.usp-circle-border}};
  --usp-circle-border-width: {{block.settings.usp-circle-border-width}}px;
}
.usp-container {

  background: {{block.settings.bg}};
  margin:20px 0;

}


.Ds-usp-wrapper {
    width: 100%;
    display: flex;
    align-items: baseline;
    white-space: nowrap;
    scroll-behavior: smooth;
    overflow-x: scroll;
    justify-content: flex-start;
    gap: .5rem;
}
.Ds-usp-wrapper::-webkit-scrollbar {
  background-color: transparent;
}
.Ds-usp-wrapper::-webkit-scrollbar-thumb {
  background-color: #000;
  height: 1px;
}
.Ds-usp-items {
  flex: 0 0 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
span.Ds-content {
 font-size:{{block.settings.font-size}}px;
  text-align: center;
  font-family: inherit;
  text-transform: inherit;
  color:{{block.settings.text-color}};
}
.Ds-usp-wrapper img {
  width: 80%;
  height: auto;
  display: block;
}
.Ds-usp-items .Ds-img {
  box-shadow: 2px 2px 2px 1px rgba(0,0,0,0.08);
  border-radius: var(--usp-radius);
  width: var(--usp-width);
  height: var(--usp-width);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  background-color: var(--usp-circle-bg);
  border: var(--usp-circle-border-width) solid var(--usp-circle-border);
}

.Ds-usp-wrapper::-webkit-scrollbar {
  display: none;
}

@media(max-width < 767px) {
  .Ds-usp-items .Ds-img {
    width: 40px;
  }

  .Ds-usp-items {
    flex: 0 0 22%;
    gap: 5px;
  }

  .Ds-usp-wrapper {
    gap: 6%;
  }
}
</style>


  <div class="Ds-usp-container">
    <div class="Ds-usp-wrapper">
        {% if block.settings.usp_icon_1_image  != blank %}
      <div class="Ds-usp-items">
        <div class="Ds-img"><img src="{{block.settings.usp_icon_1_image | image_url }}" alt="{{block.settings.usp_icon_1_title}}"></div>
        <span class="Ds-content">{{block.settings.usp_icon_1_title}}</span>
      </div>
        {% endif %}

     {% if block.settings.usp_icon_2_image  != blank %}
      <div class="Ds-usp-items">
    <div class="Ds-img"><img src="{{block.settings.usp_icon_2_image | image_url }}" alt="{{block.settings.usp_icon_2_title}}"></div>
        <span class="Ds-content">{{block.settings.usp_icon_2_title}}</span>
      </div>
        {% endif %}

     {% if block.settings.usp_icon_3_image  != blank %}
      <div class="Ds-usp-items">
       <div class="Ds-img"><img src="{{block.settings.usp_icon_3_image | image_url }}" alt="{{block.settings.usp_icon_3_title}}"></div>
        <span class="Ds-content">{{block.settings.usp_icon_3_title}}</span>
      </div>
        {% endif %}

      {% if block.settings.usp_icon_4_image  != blank %}
        <div class="Ds-usp-items">
          <div class="Ds-img"><img src="{{block.settings.usp_icon_4_image | image_url }}" alt="{{block.settings.usp_icon_4_title}}"></div>
           <span class="Ds-content">{{block.settings.usp_icon_4_title}}</span>
        </div>
        {% endif %}

    {% if block.settings.usp_icon_5_image  != blank %}
      <div class="Ds-usp-items">
         <div class="Ds-img"><img src="{{block.settings.usp_icon_5_image | image_url }}" alt="{{block.settings.usp_icon_5_title}}"></div>
        <span class="Ds-content">{{block.settings.usp_icon_5_title}}</span>
      </div>
      {% endif %}

      {% if block.settings.usp_icon_6_image  != blank %}
      <div class="Ds-usp-items">
         <div class="Ds-img"><img src="{{block.settings.usp_icon_6_image | image_url }}" alt="{{block.settings.usp_icon_6_title}}"></div>
        <span class="Ds-content">{{block.settings.usp_icon_6_title}}</span>
      </div>

      {% endif %}

        </div>
    </div>




